@model Web.Areas.Identity.Pages.Account.LoginModel

@{
    Layout = null;
    ViewData["Title"] = "Log in";
}
<head>
    <link href="~/login/css/login.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,500,300' rel='stylesheet' type='text/css'>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" rel="stylesheet">
</head>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


<body>
    <form method="post" id="account" onsubmit="submitForm(event)">

        <div id="mainButton" class="active">
            <div class="btn-text" onclick="openForm()">Sign In</div>
            <div class="modal">
                <div class="close-button" onclick="closeForm()">x</div>
                <div style="text-align: center;">
                    <img src="~/company-manager/img/logologin.png" style="height: 50px; width: 350px;" />
                    <div class="form-title">Sign In</div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger error-message" role="alert"></div>
                <p class="error-message">@TempData["Error"]</p>
                <br />
                <div class="input-group">
                    <label asp-for="Input.Email">Username</label>
                    <br />
                    <input asp-for="Input.Email" id="name" onblur="checkInput(this)" required />
                </div>
                <div class="input-group">
                    <label asp-for="Input.Password">Password</label>
                    <span id="togglePassword" class="eye-icon" onclick="togglePasswordVisibility()">
                        <i class="fas fa-eye"></i>
                    </span>
                    <br />
                    <input asp-for="Input.Password" type="password" id="password" onblur="checkInput(this)" required />
                </div>

                <button id="goButton" class="form-button" data-userrole="@User.IsInRole("CompanyManager")" asp-route-returnUrl="/CompanyManager/MainPage/Index">GO</button>
            </div>
        </div>
    </form>
    <script src="~/login/js/login.js"></script>
</body>


